<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="horizontal">

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="320dp"
        android:layout_marginTop="5dp"
        android:background="#65B8FB"
        android:text="@string/cancelBtn"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/todoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/makeTodoText"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="23sp" />


    <EditText
        android:id="@+id/textInput"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:autofillHints=""
        android:hint="@string/detail_todo_input_hint"
        android:privateImeOptions="defaultInput-mode=korean" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="150dp" />

    <CheckBox
        android:id="@+id/repeatChk"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:text="@string/repeatCheck" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="280dp">

        <Button
            android:id="@+id/sunBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="46dp"
            android:layout_height="39dp"
            android:text="@string/sunday"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="288dp" />

        <Button
            android:id="@+id/monBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="46dp"
            android:layout_height="39dp"
            android:text="@string/monday"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="288dp" />

        <Button
            android:id="@+id/tueBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="46dp"
            android:layout_height="39dp"
            android:text="@string/tuesday"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="124dp"
            tools:layout_editor_absoluteY="288dp" />

        <Button
            android:id="@+id/wedBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="46dp"
            android:layout_height="39dp"
            android:text="@string/wednesday"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="183dp"
            tools:layout_editor_absoluteY="288dp" />

        <Button
            android:id="@+id/thuBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="46dp"
            android:layout_height="39dp"
            android:text="@string/thursday"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="288dp" />

        <Button
            android:id="@+id/friBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="46dp"
            android:layout_height="39dp"
            android:text="@string/friday"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="283dp"
            tools:layout_editor_absoluteY="288dp" />

        <Button
            android:id="@+id/satBtn"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="46dp"
            android:layout_height="39dp"
            android:text="@string/saturday"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="334dp"
            tools:layout_editor_absoluteY="288dp" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/alarmChk"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="330dp"
        android:text="@string/alarmCheck" />


    <LinearLayout
        android:id="@+id/timeLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="380dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/todo_hour"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo_time"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/todo_minute"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/ampm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/todo_am"
            android:textSize="30sp" />

    </LinearLayout>


    <Button
        android:id="@+id/saveButton"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="500dp"
        android:background="#65B8FB"
        android:text="@string/submitBtn"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>


